<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="153dp"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/imageView8"

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/shape_rectangle_stroke" />
    <ImageView
        android:id="@+id/subject_imageView"
        android:layout_width="144dp"
        android:layout_height="95dp"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:layout_constraintLeft_toLeftOf="@id/imageView8"
        app:layout_constraintRight_toRightOf="@id/imageView8"
        android:layout_marginTop="2dp"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/Subject_TextView"
        app:layout_constraintTop_toBottomOf="@+id/subject_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"

        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>