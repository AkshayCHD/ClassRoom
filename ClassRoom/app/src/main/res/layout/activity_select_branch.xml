<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.akshay.classroom.SelectBranch">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:textSize="30dp"
            android:text="Computer Science"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:id="@+id/CSEtextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />
        <ImageView
            android:layout_width="355dp"
            android:layout_height="42dp"
            android:background="@drawable/shape_elipse_stroke"

            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="6dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/CSEtextView" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/ComputerScienceRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CSEtextView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:text="Information Technology"
            android:id="@+id/ITtextview"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ComputerScienceRecyclerView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/InformationTechnologyRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ITtextview"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="368dp"
            android:layout_height="35dp"
            android:text="Mechanical"
            android:id="@+id/MECHtextview"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/InformationTechnologyRecyclerView"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/MechanicalRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/MECHtextview"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

</ScrollView>