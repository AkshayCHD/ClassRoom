<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.akshay.classroom.SelectBranch">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="368dp"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:layout_height="40dp"
            android:textSize="30dp"
            android:text="Computer Science"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:id="@+id/CSEtextView"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"
            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/CSEtextView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/ComputerScienceRecyclerView" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/ComputerScienceRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/CSEtextView"

            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:text="Information Technology"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:id="@+id/ITtextview"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ComputerScienceRecyclerView"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"

            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/ITtextview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/InformationTechnologyRecyclerView" />


        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/InformationTechnologyRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ITtextview"

            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>
        <TextView
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:text="Mechanical"
            android:id="@+id/MECHtextview"
            android:textSize="30dp"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/InformationTechnologyRecyclerView"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"

            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/MECHtextview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/MechanicalRecyclerView" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/MechanicalRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/MECHtextview"

            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:text="Electronics and Comm"
            android:id="@+id/ECEtextview"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/MechanicalRecyclerView"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"

            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/ECEtextview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/ECERecyclerView" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/ECERecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ECEtextview"

            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:text="Electrical and Electronics"
            android:id="@+id/EEEtextview"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="-233dp"
            app:layout_constraintTop_toBottomOf="@+id/ECERecyclerView"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="-121dp" />
        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"

            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/EEEtextview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/EEERecyclerView" />


        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/EEERecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/EEEtextview"

            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="368dp"
            android:layout_height="40dp"
            android:text="BioTechnology"
            android:id="@+id/BIOtextview"
            android:fontFamily="cursive"
            android:textColor="@color/colorPrimary"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/EEERecyclerView"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="6dp"

            android:background="@drawable/shape_elipse_stroke"
            app:layout_constraintTop_toBottomOf="@+id/BIOtextview"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/BiotechRecyclerView" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:id="@+id/BiotechRecyclerView"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/BIOtextview"
            app:layout_constraintLeft_toLeftOf="parent">

        </android.support.v7.widget.RecyclerView>


    </android.support.constraint.ConstraintLayout>

</ScrollView>